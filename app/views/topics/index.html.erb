<% provide :title, '话题讨论' %>

<div id="topics"><div class="pine-wrap">
	<!-- 左侧 -->
	<div class="main pine-left topics-part" style="margin-top: 0">
		<!-- 栏目 -->
		<div class="topics-title">
			<a class="title-a selected" href="">最新</a>
			<a class="title-a" href="">精华</a>
			<a class="title-a" href="">问答</a>
			<a class="title-a" href="">分享</a>
			<a class="title-a" href="">瞎扯淡</a>
		</div>

		<!-- 话题内容 -->
		<div id="topics_content">
			

			<!-- 局部视图展示话题 -->
			<%= render @topics %>
			<%= will_paginate %>

			<!-- 自定义页码
			<div id="pagination">
				<a class="item">«</a>
				<a class="item">1</a>
				<a class="item">2</a>
				<a class="item">3</a>
				<a class="item">4</a>
				<a class="item">5</a>
				<a class="item">...</a>
				<a class="item">»</a>
			</div> -->
		</div>
	</div>

	<!-- 右侧 -->
	<div id="topics-banner" class="banner pine-right">

		<!-- 发布话题 -->
		<div class="part">
			<%= render 'pubbanner' %>
		</div>


		<!-- 热门话题 -->
		<div class="part">
			<%= render 'hot' %>
		</div>

		<!-- 用户积分排行 -->
		<div class="part">
			<%= render 'score' %>
		</div>

		<!-- 精华 -->
		<div class="part">
			<%= render 'essence' %>
		</div>
	</div>
</div></div>
